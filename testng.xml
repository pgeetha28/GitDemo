<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">

<suite name="Loan Department" parallel="tests" thread-count="5">
<listeners>
<listener class-name="org.Udemy.Listeners">
</listener>
</listeners>
<!-- suite level parameter -->
	<parameter name="URL" value="qaAcademy.com"></parameter>
	
	<test name="Demo">
		<classes>
			<class name="org.testng.DemoTest">
				<methods>
					<include name="DemoTest"></include>
				</methods>
			</class>
			<class name="org.testng.AllAnnotations">
				<methods>
					<exclude name="Test.*"></exclude>
				</methods>
			</class>
		</classes>
	</test>

	<test name="Loan Test">
	<!-- test level parametr -->
		<parameter name="URL" value="gmail.com"></parameter>
		<parameter name="APIKey" value="123456789"></parameter>
		<classes>
			<class name="org.Udemy.CarLoan" />
			<class name="org.Udemy.BikeLoan" />
			<class name="org.Udemy.HomeLoan" />
		</classes>
	</test>

	<test name="Smoke Test">
	<parameter name="URL" value="smoke.com"></parameter>
		<groups>
			<run>
				<include name="smoke"></include>
			</run>
		</groups>
		<classes>
			<class name="org.Udemy.HomeLoan" />
			<class name="org.Udemy.CarLoan" />
			<class name="org.Udemy.BikeLoan" />

		</classes>
	</test>

</suite> 
